              "type": "string"
            }
          },
          {
            "name": "image",
            "in": "query",
            "description": "Image ID",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "video",
            "in": "query",
            "description": "Video ID",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {}
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
              }
            }
          }
        }
